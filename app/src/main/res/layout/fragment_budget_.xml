<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/budgetFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".budget_Fra"
    android:background="@color/blue"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/budget_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget"
            android:textColor="@color/white"
            android:fontFamily="@font/intersemibold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/btn_back_budgetdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToOutline="true"
            android:background="@drawable/arrow_back"
            android:layout_marginLeft="20dp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/btn_forward_budgetdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToOutline="true"
            android:background="@drawable/arrow_next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"


            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_budget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_budget"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="620dp"
        android:background="@color/white"
        >


        <TextView

            android:id="@+id/btn_create_budget"
            android:text="Create a budget"
            android:fontFamily="@font/intermedium"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_larg_blue"
            android:backgroundTint="@color/blue"


            />


    </RelativeLayout>

</FrameLayout>