<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaction_Fra"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        >

        <TextView
            android:id="@+id/trans_show_EXP"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/expense_home_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/intermedium"
            android:text="Expense:"
            android:textColor="@color/red"
            android:textSize="23dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_trans_EXP"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="100dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_transaction">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"

        >
        <TextView
            android:id="@+id/trans_show_INC"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/income_home_icon"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income:"
            android:textSize="23dp"
            android:textColor="@color/green"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/intermedium"
            android:layout_marginTop="25dp"
            />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycler_trans_INC"
        android:layout_height="260dp"
        android:layout_marginTop="440dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_transaction"

        >

    </androidx.recyclerview.widget.RecyclerView>

</FrameLayout>