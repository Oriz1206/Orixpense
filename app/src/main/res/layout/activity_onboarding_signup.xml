<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding_signup_Activity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:fontFamily="@font/interbold"
        android:layout_marginTop="44dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"


        />

    <RelativeLayout
        android:id="@+id/input_field_name"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/input_box">

        <EditText
            android:id="@+id/name_signup"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:hint="@string/name"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input_field_email"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/input_box" >

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:hint="@string/email"
            android:layout_centerHorizontal="true"
            />.
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/input_field_password"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/input_box">

        <EditText
            android:id="@+id/pass_signup"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:hint="@string/pass"
            android:layout_centerHorizontal="true"
            />.

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="397dp">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToOutline="true"

            />


        <TextView
            android:id="@+id/by_signing_"
            android:layout_width="291dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true"
            android:text="@string/by_signing_"
            android:lineSpacingExtra="1sp"
            android:gravity="center_vertical"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/btnsignup"
        android:text="sign up"
        android:fontFamily="@font/intermedium"
        android:textColor="@color/white"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/button_larg_blue"
        />

    <TextView
        android:id="@+id/have_acc"
        android:layout_width="244dp"
        android:layout_height="19dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="590dp"
        android:text="@string/already_hav"
        />



</RelativeLayout>