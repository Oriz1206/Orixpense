<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_Fra"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Balance"
            android:fontFamily="@font/interlight"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/Balance"
            android:layout_width="328dp"
            android:layout_height="58dp"
            android:text="$0"
            android:fontFamily="@font/interbold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:textSize="42dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            >
            <RelativeLayout
                android:id="@+id/income_box"
                android:layout_width="164dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/income_home_show"
                >
                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/home_inc_exp_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    >
                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/income_home_icon"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="17dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:textColor="@color/dimwhite"
                        android:textSize="16dp"

                        />

                    <TextView
                        android:id="@+id/home_INC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="$0"
                        android:textSize="26dp"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="164dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/expense_home_show"
                >
                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/home_inc_exp_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    >
                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/expense_home_icon"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="17dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:textColor="@color/dimwhite"
                        android:textSize="16dp"

                        />

                    <TextView
                        android:id="@+id/home_EXP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="$0"
                        android:textSize="26dp"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:text="Recent Transaction"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/interbold"
            android:textSize="22sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/see_all_trans"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/home_see_all"
            android:text="see all"
            android:fontFamily="@font/interbold"
            android:textColor="@color/blue"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="340dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Expense:"
            android:textColor="@color/red"
            android:textSize="23dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="5dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trans_box">

                    <RelativeLayout
                        android:id="@+id/item_home_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/home_inc_exp_icon"
                        android:gravity="center"

                        >

                        <View
                            android:id="@+id/item_home_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/expense_home_icon"
                            android:backgroundTint="@color/red" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="86dp">

                        <TextView
                            android:id="@+id/cat_home_iEXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/intersemibold"
                            android:text="Category"
                            android:textColor="@color/black"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/des_home_iEXP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cat_home_iEXP"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/intermedium"
                            android:text="Description"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/gray" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:id="@+id/home_iEXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/intersemibold"
                            android:text="-$0"
                            android:textColor="@color/red"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/date_home_iEXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/home_iEXP"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/intermedium"
                            android:text="Date"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/gray" />
                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/intermedium"
            android:text="Income:"
            android:textColor="@color/green"
            android:textSize="23dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="5dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trans_box"
                    >

                    <RelativeLayout
                        android:id="@+id/item_trans_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_inc_exp_icon"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"

                        >
                        <View
                            android:id="@+id/item_trans_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/income_home_icon"
                            android:backgroundTint="@color/green"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="86dp"
                        >
                        <TextView
                            android:id="@+id/cat_home_iINC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:fontFamily="@font/intersemibold"
                            android:textSize="19dp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/des_home_iINC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="@font/intermedium"
                            android:textColor="@color/gray"
                            android:layout_below="@+id/cat_home_iINC"
                            android:layout_marginTop="7dp"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        >
                        <TextView
                            android:id="@+id/home_iINC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+$0"
                            android:textColor="@color/green"
                            android:fontFamily="@font/intersemibold"
                            android:textSize="19dp"
                            />
                        <TextView
                            android:id="@+id/date_home_iINC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="@font/intermedium"
                            android:textColor="@color/gray"
                            android:layout_below="@+id/home_iINC"
                            android:layout_marginTop="7dp"
                            />
                    </RelativeLayout>



                </RelativeLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>




</FrameLayout>