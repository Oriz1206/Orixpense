<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/budget_box"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                >
                <RelativeLayout
                    android:id="@+id/cat_budget_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_budget_box"

                    >

                    <TextView
                        android:id="@+id/budget_status"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/budget_status"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/cat_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_toRightOf="@+id/budget_status"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="16dp"
                        android:text="Shopping"
                        android:gravity="center"
                        android:fontFamily="@font/intermedium"
                        android:textColor="@color/black"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/budget_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining $"
                    android:fontFamily="@font/intersemibold"
                    android:textSize="29dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/cat_budget_box"

                    />

                <ProgressBar
                    android:id="@+id/progressBar_itembudget"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/budget_show"
                    android:progressDrawable="@drawable/progressbar"
                    android:progress="23"
                    android:progressTint="@color/gray"
                    android:progressBackgroundTint="@color/blue"
                    />


                <TextView
                    android:id="@+id/des_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:fontFamily="@font/intermedium"
                    android:textColor="@color/gray"
                    android:layout_below="@+id/progressBar_itembudget"
                    android:layout_marginTop="7dp"
                    />


            </RelativeLayout>



        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>